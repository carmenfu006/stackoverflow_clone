<%= turbo_stream_from 'comments' %>

<%= turbo_frame_tag 'comment_form' do %>
  <%= render 'comments/comment_form', locals: { @comment => @comment } %>
<% end %>

<%= turbo_frame_tag 'comments' do %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', comment: comment %>
  <% end %>
<% end %>